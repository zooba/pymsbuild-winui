{% include "regen-header.tmpl" %}
#include "pch.h"
#include <_winui.h>
#include "{{page.basename}}.h"
#include "{{page.name}}.g.cpp"

{% for vm in page.viewmodels %}
#include "{{vm.name}}.g.cpp"
