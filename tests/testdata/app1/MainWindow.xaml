<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="app.MainWindow"
    x:Name="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:app"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:py="http://schemas.stevedower.id.au/pymsbuild/winui"
    mc:Ignorable="d py">

    <py:Property Name="MyProperty" Type="str" />
    <py:EventHandler Name="Calendar_DateChanged" Sender="CalendarDatePicker" EventArg="CalendarDatePickerDateChangedEventArgs" />
    <py:EventHandler Name="Color_ColorChanged" Sender="ColorPicker" EventArg="ColorChangedEventArgs" />

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="{x:Bind MyProperty,Mode=OneWay}" />
        <StackPanel Orientation="Horizontal">
            <CalendarDatePicker x:Name="Calendar" DateChanged="Calendar_DateChanged" />
            <ColorPicker x:Name="Color" ColorChanged="Color_ColorChanged" />
        </StackPanel>
    </StackPanel>
</Window>
